<header>
    <nav id="navigator">
        <% if(user) { %>
            <div class="logo__container">
                <a href="/dashboard"><img src="/img/brainLogo.jpeg" alt="Logo"></a>
            </div>
            <div class="userNav">
                <div class="userimg__container">
                    <% if(img) {%>
                        <img src="<%= img.path %>" alt="<%= img.filename %>">
                    <% } else {%>
                        <img src="/img/user.png" alt="user">
                    <% } %>
                </div>
                <h2><%= user.username %></h2>
                <!-- <img id="downBtn" class="down" src="/img/down.png" alt="down">
                <img id="upBtn" class="up" src="/img/up.png" alt="down"> -->
                <div class="iconContainer">
                    <i id="menuBtn" class="menuBar fb fa-bars fa"></i>
                    <i id="closeMenu" class="close_menu fb fa-xmark fa"></i>
                </div>
            </div>
        <% } else { %>
            <div class="logo__container">
                <a href="/"><img src="/img/brainLogo.jpeg" alt="Logo"></a>
            </div>
            <ul class="nav_content">
                <li><a href="/api/auth/signin">Login</a></li>
                <li><a href="/api/auth/signup">SignUp</a></li>
            </ul>
        <% } %>
    </nav>
    <% if (user) { %>
        <div class="menu_container">
            <div class="menu">
                <ul class="menu_options">
                    <li class="menu_li"><span class="dashIco fa"></span><a href="/dashboard">Dashboard</a></li>
                    <li class="menu_li"><span class="graphicsIco fa"></span><a href="/api/settings/graphics">Tasks Graphics</a></li>
                    <li class="menu_li"><span class="user fa"></span><a href="#">About us</a></li>
                    <li class="menu_li"><span class="settings fa"></span><a href="/api/settings/profile">Settigns</a></li>
                    <li class="menu_li"><span class="logout fa"></span><a href="/api/auth/logout">Logout</a></li>
                </ul>
                <!-- Dark mode -->
                <div class="dark-container">
                    <input type="checkbox" class="checkbox" id="chk">
                    <label for="chk" class="label-container">
                        <i class="fa fa-moon"></i>
                        <i class="fa fa-sun"></i>
                        <div class="ball"></div>
                    </label>
                </div>
            </div>
        </div>
    <% } %>
</header>