<header>
    <nav>
        <% if(user) { %>
            <div class="logo__container">
                <a href="/dashboard"><img src="/img/brainLogo.jpeg" alt="Logo"></a>
            </div>
            <div class="userNav">
                <div class="userimg__container">
                    <% if(img) {%>
                        <img src="<%= img.path %>" alt="<%= img.filename %>">
                    <% } else {%>
                        <img src="/img/user.png" alt="user">
                    <% } %>
                </div>
                <h2><%= user.username %></h2>
                <img id="downBtn" class="down" src="/img/down.png" alt="down">
                <img id="upBtn" class="up" src="/img/up.png" alt="down">
            </div>
        <% } else { %>
            <div class="logo__container">
                <a href="/"><img src="/img/brainLogo.jpeg" alt="Logo"></a>
            </div>
            <ul class="nav_content">
                <li><a href="/api/auth/signin">Login</a></li>
                <li><a href="/api/auth/signup">SignUp</a></li>
            </ul>
        <% } %>
    </nav>
    <% if (user) { %>
        <div class="menu_container">
            <div class="menu">
                <ul class="menu_options">
                    <li><span class="dashIco fa"></span><a href="/dashboard">Dashboard</a></li>
                    <li><span class="user fa"></span><a href="#">About us</a></li>
                    <li><span class="settings fa"></span><a href="/api/settings/profile">Settigns</a></li>
                    <li><span class="logout fa"></span><a href="/api/auth/logout">Logout</a></li>
                </ul>
            </div>
        </div>
    <% } %>
</header>